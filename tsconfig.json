{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017"
    ],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}